{% extends 'base.html.twig' %}

{% block body %}

    <h2>Liste des ingrédients</h2>

    <table class="table table-striped">
        <thead>
            <th>ID</th>
            <th>Ajouté le</th>
            <th>Ingrédient</th>
            <th>Calories</th>
        </thead>
    <tbody>

    {% for record in records %}
        <tr>
            <td>{{ record.id }}</td>
            <td>{{ record.recordedAt|date('d/m/Y') }}</td>
            <td>{{ record.entitled }}</td>
            <td>{{ record.calories }} Cal</td>
        </tr>

    {% endfor %}
        </tbody>
        </table>


        <a href="{{ path('add-new-record') }}" type="button" class="btn btn-success btn-lg pull-right"><i class="fa fa-plus-square"></i> Ajouter une nouvelle entrée</a>

{% endblock %}