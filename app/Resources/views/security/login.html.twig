{% extends 'base.html.twig' %}

{% block body %}
<div class="col s12 form-login-connect no-padding">
    <form action="{{ path('login_check') }}" method="post">
        {% if csrf_token is defined %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="input-field col-12 no-padding no">
            <label for="icon_email">Email</label>
            <input id="icon_email" type="email" name="_username" class="form-control" required="required" />

        </div>

        <div class="input-field col-12 no-padding no" style="margin-top: 20px">
            <label for="icon_password">Mot de passe</label>
            <input id="icon_password" type="password" name="_password" class="form-control" required="required" />
        </div>

        <div class="col-12 login-submit text-center" style="margin-top: 20px">
            <button class="btn waves-effect waves-light" type="submit" name="action">Valider</button>
        </div>
    </form>
</div>
{% endblock body %}
